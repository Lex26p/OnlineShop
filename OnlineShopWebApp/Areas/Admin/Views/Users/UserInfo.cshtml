@model User

<div class="text-center">
    @await Html.PartialAsync("AdminNav")
    <div class="admin__cont">
        <h1 class="text-center">Пользователь @Model.Name</h1>
        <p class="admin__order-text">Имя @Model.Name</p>
        <p class="admin__order-text">Фамилия - @Model.Surname</p>
        <p class="admin__order-text">Номер телефона - @Model.PhoneNumber</p>
        <p class="admin__order-text">Электронный адрес - @Model.Email</p>
        <div class="admin__cont_set">
            <div class="admin__cont_link">
                <span class="admin__link_title">Действия</span>
                <a class="admin__link" asp-area="Admin" asp-controller="Users" asp-action="EditPassword" asp-route-id="@Model.Id">Сменить пароль</a>
                <a class="admin__link" asp-area="Admin" asp-controller="Users" asp-action="EditUser" asp-route-id="@Model.Id">Изменить данные</a>
                <a class="admin__link" asp-area="Admin" asp-controller="Users" asp-action="UserRoles" asp-route-id="@Model.Id">Роли</a>
                <a class="admin__link" asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-id="@Model.Id">Удалить</a>
            </div>
        </div>
    </div>
</div>