<header class="header">
    <div class="header__nav">
        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
        @if (User.Identity?.IsAuthenticated == true)
        {
            @await Component.InvokeAsync("Cart")
            @await Component.InvokeAsync("Compare")
            @await Component.InvokeAsync("Like")
        }
    </div>
    <div class="header__nav">
        @if (User.Identity?.IsAuthenticated == true)
        {
            @if (User.IsInRole(Consts.AdminRoleName))
            {
                @await Component.InvokeAsync("AdminLink")
            }
            else
            {
                @await Component.InvokeAsync("UserLink")
            }
        }
        else
        {
            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Войти</a>
        }
    </div>
</header>