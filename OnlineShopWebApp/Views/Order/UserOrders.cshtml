@using Ozon.Db

@model List<OrderVM>

<div class="text-center">
    @await Html.PartialAsync("UserNav")
    @if (Model.Count > 0)
    {
        <div class="admin__cont">
            <h1 class="text-center">Список заказов</h1>
            <div class="admin__cont-title">
                <span class="admin__prod-id">N</span>
                <span class="admin__order-name">Статус</span>
                <span class="admin__order-login">Имя и Фамилия</span>
                <span class="admin__order-login">Телефон</span>
                <span class="admin__prod-cost">Сумма заказа</span>
            </div>
            @{
                foreach (var p in Model)
                {
                    <div class="admin__cont-item">
                        <span class="admin__prod-id">@p.Num</span>
                        <span class="admin__order-name">@Consts.GetAttributeName(p.Status)</span>
                        <span class="admin__order-login">@p.Name @p.Surname</span>
                        <span class="admin__order-login">@p.Tel</span>
                        <span class="admin__prod-cost">@string.Format("{0:f2}" + " p.", p.Cart.Cost)</span>
                        <a class="admin__prod-link" asp-controller="Order" asp-action="OrderInfo" asp-route-id="@p.Id">Подробнее</a>
                    </div>
                }
            }
        </div>
    }
    else
    {
        <div class="admin__cont">
            <h1 class="text-center">Список заказов пустой</h1>
        </div>
    }
</div>