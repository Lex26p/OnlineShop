@model List<User>

<div class="text-center">
    @await Html.PartialAsync("AdminNav")
    @if (Model.Count > 0)
    {
        <div class="admin__cont">
            <h1 class="text-center">Список пользователей</h1>
            <div class="admin__cont-title">
                <span class="admin__user-name">Логин</span>
                <span class="admin__user-name">Имя</span>
                <span class="admin__user-name">Фамилия</span>
                <span class="admin__user-name">Телефон</span>
            </div>
            @{
                foreach (var p in Model)
                {
                    <a class="admin__cont-users" asp-area="Admin" asp-controller="Users" asp-action="UserInfo" asp-route-id="@p.Id">
                        <span class="admin__user-name">@p.Email</span>
                        <span class="admin__user-name">@p.Name</span>
                        <span class="admin__user-name">@p.Surname</span>
                        <span class="admin__user-name">@p.PhoneNumber</span>
                    </a>
                }
            }
        </div>
    }
    else
    {
        <div class="admin__cont">
            <h1 class="text-center">Пользователей нет.</h1>
        </div>
    }
    <a class="btm" asp-area="" asp-controller="User" asp-action="Index">Новый пользователь</a>
</div>